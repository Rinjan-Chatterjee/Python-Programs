    "#program to check for leap year\n",
    "\n",
    "#taking the input\n",
    "year = int(input(\"Enter the Year : \"))\n",
    "\n",
    "#checking the conditions for a year to be a leap year \n",
    "if (year % 4 == 0) and (year % 100 != 0 or year % 400 == 0):\n",
    "    print(\"Leap Year\")\n",
    "else:\n",
    "    print(\"Common Year\")\n"
